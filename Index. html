xts[randomIndex];textDisplay.innerHTML="";currentText.split("").forEach(char=>{const charSpan=document.createElement("span");charSpan.innerText=char;textDisplay.appendChild(charSpan);});}function setupEventListeners(){startBtn.addEventListener("click",startTest);resetBtn.addEventListener("click",resetTest);tryAgainBtn.addEventListener("click",resetTest);textInput.addEventListener("input",handleTyping);navLinks.forEach(link=>{link.addEventListener("click",e=>{e.preventDefault();const pageId=e.target.getAttribute("data-page");showPage(pageId);});});}function showPage(pageId){pages.forEach(page=>{page.classList.remove("active");});document.getElementById(pageId).classList.add("active");}function startTest(){if(testStarted)return;testStarted=true;startBtn.disabled=true;resetBtn.disabled=false;textInput.disabled=false;textInput.focus();startTime=new Date();timeLeft=60;updateTimer();timer=setInterval(updateTimer,1000);}function updateTimer(){timeLeft--;timeDisplay.textContent=timeLeft;if(timeLeft<=0){endTest();}}function handleTyping(){if(!testStarted)return;const typedText=textInput.value;totalChars=typedText.length;correctChars=0;const textSpans=textDisplay.querySelectorAll("span");textSpans.forEach((charSpan,index)=>{const typedChar=typedText[index];if(typedChar==null){charSpan.classList.remove("correct","incorrect","current");}else if(typedChar===charSpan.innerText){charSpan.classList.add("correct");charSpan.classList.remove("incorrect","current");correctChars++;}else{charSpan.classList.add("incorrect");charSpan.classList.remove("correct","current");}});if(typedText.length<currentText.length){textSpans[typedText.length].classList.add("current");}const elapsedTime=(new Date()-startTime)/1000/60;const wpm=Math.round((correctChars/5)/elapsedTime)||0;const accuracy=Math.round((correctChars/totalChars)*100)||0;wpmDisplay.textContent=wpm;accuracyDisplay.textContent=accuracy;if(typedText.length>=currentText.length){endTest();}}function endTest(){clearInterval(timer);testStarted=false;textInput.disabled=true;const elapsedTime=60-timeLeft;const wpm=Math.round((correctChars/5)/(elapsedTime/60))||0;const accuracy=Math.round((correctChars/totalChars)*100)||0;finalWpm.textContent=wpm;finalAccuracy.textContent=accuracy+"%";finalTime.textContent=elapsedTime+"s";results.classList.add("active");}function resetTest(){clearInterval(timer);testStarted=false;timeLeft=60;timeDisplay.textContent=timeLeft;wpmDisplay.textContent=0;accuracyDisplay.textContent=0;textInput.value="";textInput.disabled=true;startBtn.disabled=false;resetBtn.disabled=true;results.classList.remove("active");loadRandomText();}document.addEventListener("DOMContentLoaded",init);</script></body></html>
